<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="view_logistic_attachments_tree" model="ir.ui.view">
    <field name="priority">20</field>
    <field name="model">ir.attachment</field>
    <field name="arch" type="xml">
        <tree editable="top" create="false" string="Logistic attachments">
            <field name="write_date" readonly="1"/>
            <field name="name" readonly="1"/>
            <field name="sending_date"/>
        </tree>
    </field>
</record>

<record id="logistic_attachments_action" model="ir.actions.act_window">
    <field name="name">Logistic attachments</field>
    <field name="res_model">ir.attachment</field>
    <field name="view_mode">tree</field>
    <field name="domain">[('external_type', '!=', False)]</field>
    <field name="view_id" ref="view_logistic_attachments_tree"/>
</record>

<menuitem id="logistic_attachments_menu" name="Logistic attachments" sequence="110"
          parent="stock.menu_warehouse_config" action="logistic_attachments_action"/>

</odoo>
